<rezeptsammlung xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../bin/aufgabe3.xsd">
  <rezept rezeptid="203">
    <name>Mizza</name>
    <zutaten>
      <anzahl_personen>4</anzahl_personen>
      <zutat einheit="kg" menge="1">
        <name>Mehl</name>
      </zutat>
      <zutat>
        <name>Salz</name>
      </zutat>
      <zutat einheit="ml" menge="625">
        <name>Wasser</name>
      </zutat>
      <zutat einheit="Schuss" menge="1">
        <name>Olivenoel</name>
      </zutat>
      <zutat einheit="Packung" menge="0.3">
        <name>Hefe</name>
      </zutat>
    </zutaten>
    <zubereitung>
      <arbeitszeit einheit="Stunde" menge="2"/>
      <schwierigkeitsgrad>fortgeschritten</schwierigkeitsgrad>
      <brennwert einheit="kcal" menge="1000"/>
      <anleitung>
        <schritt nummer="1">
          <inhalt>alles (außer 400g des Mehls) mischen in einer Schuessel.</inhalt>
        </schritt>
        <schritt nummer="2">
          <inhalt>20 min. gehen lassen</inhalt>
        </schritt>
        <schritt nummer="3">
          <inhalt>Rest des Mehls hinzugeben, alles kneten und nochmals 20 min. gehen lassen.</inhalt>
        </schritt>
        <schritt nummer="4">
          <inhalt>mit Belag deiner Wahl belegen. mit viel Liebe :)</inhalt>
        </schritt>
        <schritt nummer="5">
          <inhalt>Im auf 250°C erhitzten Backofen (je heißer desto besser!) ca. 10 min. backen.</inhalt>
        </schritt>
      </anleitung>
    </zubereitung>
