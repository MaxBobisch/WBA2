<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
elementFormDefault="qualified">

<!-- definition of simple elements -->
<xs:element name="tag">
  <xs:simpleType>
    <xs:restriction base="xs:integer">
      <xs:pattern value="[0-3][0-9]"/>
      <xs:minInclusive value="1"/>
      <xs:maxInclusive value="31"/>
    </xs:restriction>
  </xs:simpleType>
</xs:element>

<xs:element name="monat">
  <xs:simpleType>
    <xs:restriction base="xs:integer">
      <xs:pattern value="[0-1][0-9]"/>
      <xs:minInclusive value="1"/>
      <xs:maxInclusive value="12"/>
    </xs:restriction>
  </xs:simpleType>
</xs:element>

<xs:element name="jahr">
  <xs:simpleType>
    <xs:restriction base="xs:integer">
      <xs:pattern value="[0-9][0-9][0-9][0-9]"/>
    </xs:restriction>
  </xs:simpleType>
</xs:element>

<xs:element name="name" type="xs:string"/>
<xs:element name="url" type="xs:string"/>
<xs:element name="anzahl_personen" type="xs:integer"/>
<xs:element name="menge" type="xs:decimal"/>
<xs:element name="einheit" type="xs:string"/>
<xs:element name="nummer" type="xs:integer"/>
<xs:element name="inhalt" type="xs:string"/>
<xs:element name="schwierigkeitsgrad" type="xs:string"/>


<!-- definition of complex elements -->
<xs:element name="datum">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="tag"/>
      <xs:element ref="monat"/>
      <xs:element ref="jahr"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="autor">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="name"/>
      <xs:element ref="datum"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

