<!-- KANN EIN REZEPT AUF EIN ANDERES VERWEISEN? -->
<xs:element name="weitere_rezepte">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="url" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<!-- root-Element 'rezept' -->
<xs:element name="rezept">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="name"/>
      <xs:element ref="zutaten"/>
      <xs:element ref="zubereitung"/>
      <!-- <xs:element ref="bilder"/> -->
      <!-- <xs:element ref="kommentare"/> -->
    </xs:sequence>
  </xs:complexType>
</xs:element>

