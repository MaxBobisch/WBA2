<xs:element name="zutat">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="name"/>
      <xs:element ref="menge" minOccurs="0"/>
      <xs:element ref="einheit" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="zutaten">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="anzahl_personen"/>
      <xs:element ref="zutat" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="schritt">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="nummer"/>
      <xs:element ref="inhalt"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="zubereitung">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="arbeitszeit"/>
      <xs:element ref="schwierigkeitsgrad"/>
      <xs:element ref="brennwert"/>
      <xs:element ref="anleitung"/>
      <xs:element ref="weitere_rezepte" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="brennwert">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="menge"/>
      <xs:element ref="einheit"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="anleitung">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="schritt" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="arbeitszeit">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="menge"/>
      <xs:element ref="einheit"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>
