	<arbeitszeit>
		<dauer>1</dauer>
		<einheit>Stunde</einheit>
	</arbeitszeit>
	<schwierigkeitsgrad>normal</schwierigkeitsgrad>
	<brennwert>
		<menge>295</menge>
		<einheit>kcal</einheit>
	</brennwert>
	<beschreibung>
	<schritt>
		<nummer>1</nummer>
		<inhalt>Butter und Schokolade im Wasserbad schmelzen.</inhalt>
	</schritt>
	<schritt>
		<nummer>2</nummer>
		<inhalt>Eier trennen.</inhalt>
	</schritt>
	<schritt>
		<nummer>3</nummer>
		<inhalt>Eiweiß steif schlagen.</inhalt>
	</schritt>
	<schritt>
		<nummer>4</nummer>
		<inhalt>Eigelbe, Zucker und Vanillezucker verrühren.</inhalt>
	</schritt>
	<schritt>
		<nummer>5</nummer>
		<inhalt>Geschmolzene Butter-Schokomasse hinzufügen und mischen.</inhalt>
	</schritt>
	<schritt>
		<nummer>6</nummer>
		<inhalt>Mehl mit dem Backpulver in die Masse sieben und zum Schluss die steifen Eiweiße vorsichtig unterheben.</inhalt>
	</schritt>
	<schritt>
		<nummer>7</nummer>
		<inhalt>In eine gut gefettete Form geben.</inhalt>
	</schritt>
	<schritt>
		<nummer>8</nummer>
		<inhalt>
			<backvorgang>
				<temperatur>
					<menge>180</menge>
					<einheit>°C</einheit>
				</temperatur>
				<dauer>
					<mindestens>
						<menge>40</menge>
					</mindestens>
					<hoechstens>
						<menge>50</menge>
					</hoechstens>
				<einheit>minuten</einheit>
				</dauer>
			</backvorgang>
		</inhalt>
	</schritt> 
	</beschreibung>
