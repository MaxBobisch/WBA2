			<einheit>g</einheit>
		</zutat>
		<zutat>
			<name>Zucker</name>
			<menge>200</menge>
			<einheit>g</einheit>
		</zutat>
		<zutat>
			<name>Schokolade, Blockschokolade</name>
			<menge>200</menge>
			<einheit>g</einheit>
		</zutat>
		<zutat>
			<name>Mehl</name>
			<menge>120</menge>
			<einheit>g</einheit>
		</zutat>
		<zutat>
			<name>Backpulver</name>
			<menge>1/2</menge>
			<einheit>Teeloeffel</einheit>
		</zutat>
		<zutat>
			<name>Vanillezucker</name>
			<menge>1</menge>
			<einheit>Paket</einheit>
		</zutat>
