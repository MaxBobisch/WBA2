<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
elementFormDefault="qualified">

<xs:include schemaLocation="Sticker.xsd"/>

<xs:include schemaLocation="Foto.xsd"/>
<!-- definition of simple elements -->

<xs:element name="Angebotbeschreibung" type="xs:string"/>
<xs:element name="verfuegbar" type="xs:boolean"/>
<xs:element name="Waehrung" type="xs:string"/>

<xs:element name="Summe">
  <xs:simpleType>
    <xs:restriction base="xs:decimal">
      <xs:minInclusive value="0.0"/>
    </xs:restriction>
  </xs:simpleType>
</xs:element> 

<xs:element name="Menge verfuegbar" default="0">
  <xs:simpleType>
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="0"/>
    </xs:restriction>
  </xs:simpleType>
</xs:element>

<!-- definition of attributes -->

<xs:attribute name="Stickerangebot" type="xs:integer"/>
<xs:attribute name="shop_ID" type="shop_ID"/>
<xs:attribute name="Angebot aktiv" type="xs:boolean"/>



<!-- definition of complex elements -->

<xs:element name="Verfuegbarkeit">
  <xs:complexType>
    <xs:sequence>
       <xs:element ref="verfuegbar"/>
       <xs:element ref="kann bestellt werden"/>
       <xs:element ref="nicht vefuegbar"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="Gesamtpreis">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="Waehrung"/>
      <xs:element ref="Summe"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>


<!-- 
root-Element: STICKERANGEBOT
 -->

<xs:element name="Stickerangebot">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="Sticker"/>
      <xs:element ref="Angebotbeschreibung"/>
      <xs:element ref="Einstellungsdatum"/>
      <xs:element ref="Gesamtpreis"/>
      <xs:element ref="Verfuegbarkeit"/>
    </xs:sequence>
    <xs:attribute ref="Stickerangebot_ID" use="required"/>
    <xs:attribute ref="shop_ID" use="required"/>
    <xs:attribute ref="Angebot_aktiv" use="required"/>
  </xs:complexType>
</xs:element>

</xs:schema>